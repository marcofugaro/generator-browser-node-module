{
	"name": "<%= moduleName %>",
	"version": "0.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},
	"keywords": [
    <%- keywords.map(word => JSON.stringify(word)).join(',\n    ') %>
  ],
  "scripts": {
		"build": "rollup -c && npm run minify",
    "minify": "minify build/<%= repoName %>.js --out-file build/<%= repoName %>.min.js",
		"test": "",
    "prepublish": "npm run build"
	},
	"main": "build/<%= repoName %>.js",<% if (moduleField) { %>
  "module": "build/<%= repoName %>.esm.js",<% } %>
  "files": [
    "build/"
  ],
  "engines": {
    "node": ">=4"
  },
	"dependencies": {},
	"devDependencies": {
    "babel-minify": "^0.2.0",
		"babel-plugin-lodash": "^3.2.11",
		"babel-plugin-transform-decorators-legacy": "^1.3.4",
		"babel-preset-env": "^1.6.0",
		"babel-preset-stage-0": "^6.24.1",
		"rollup": "^0.45.2",
		"rollup-plugin-babel": "^2.7.1",
		"rollup-plugin-commonjs": "^8.0.2",
		"rollup-plugin-node-resolve": "^3.0.0"
	}
}
